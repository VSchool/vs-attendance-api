{
  "version": "1.0.0",
  "name": "vs-attendance-api",
  "scripts": {
    "dev": "dotenvx run -- nodemon",
    "test": "npm run lint && dotenvx run -- jest",
    "build": "tsc --build --verbose",
    "start": "dotenvx run -- node ./dist/index.js",
    "lint": "tsc --noEmit && eslint --fix . && npm run format",
