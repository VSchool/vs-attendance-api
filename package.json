  },
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.15.4",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
